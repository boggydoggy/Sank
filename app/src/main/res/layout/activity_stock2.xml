<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Stock">

    <Button
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/titlebutton"
        android:fontFamily="@font/bmjua_ttf"
        android:onClick="onBackButtonClicked"
        android:text="@string/name"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/empty"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/parsetext"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="Hello 11"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/parsetext2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="Hello 22"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/parsetext3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="Hello 33"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <TextView
        android:id="@+id/parsetext4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="Hello 44"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/parsetext5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="Hello 55"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402" />

    <TextView
        android:id="@+id/empty2"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/parsetext6"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 코인을 구매or판매 하시겠습니까?"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />



    <Spinner
        android:id="@+id/coinselect"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:entries="@array/coin" />

    <TextView
        android:id="@+id/empty3"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/parsetext7"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구입할 코인의 갯수를 적어세요"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <EditText
            android:fontFamily="@font/bmjua_ttf"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buymoney"/>

        <Button
            android:fontFamily="@font/bmjua_ttf"
            android:background="@drawable/buttonshape"
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/parsetext9"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매할 코인의 갯수를 적어세요"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <EditText
            android:fontFamily="@font/bmjua_ttf"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id = "@+id/sellmoney"/>
        <Button
            android:id = "@+id/sell"
            android:fontFamily="@font/bmjua_ttf"
            android:background="@drawable/buttonshape"
            android:text="판매"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
