<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="535dp"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".withEz">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz_button"
        android:onClick="toHome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/bmjua_ttf"
            android:text="남에게 돈을 빌려 쓴 대가로 치르는 일정한 비율의 돈을 뜻하는 단어를 뭐라고 부르는가?"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/withEz1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quiz_button"
                android:fontFamily="@font/bmjua_ttf"
                android:layout_margin="10dp"
                android:onClick="wrong"
                android:text="이율"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/withEz2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quiz_button"
                android:fontFamily="@font/bmjua_ttf"
                android:layout_margin="10dp"
                android:onClick="wrong"
                android:text="원금"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/withEz3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quiz_button"
                android:fontFamily="@font/bmjua_ttf"
                android:layout_margin="10dp"
                android:onClick="correct"
                android:text="이자"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/withez4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quiz_button"
                android:fontFamily="@font/bmjua_ttf"
                android:layout_margin="10dp"
                android:onClick="wrong"
                android:text="갑자"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
